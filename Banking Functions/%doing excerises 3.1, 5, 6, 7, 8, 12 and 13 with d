%doing excerises 3.1, 5, 6, 7, 8, 12 and 13 with data from a table

x = linespace(0, 10, 100);

func_1 =  exp(-0.5 * x) .* sin(2.*x);

plot (x, func_1, 'b-', 'linewidth', 2);

hold on;

func_2 = exp(-0.5.*x) . * cos(2*x);

hold off;

title('The graph of the two functions');

xlabel('\bf\itx');

ylabel ('\bf\ity(x)');

legend('func_1 , func_2);

grid on;

%3.5

%r(theta) = sin(2(theta)) * cos(theta); 0 <= theta <= 2pi

polar(ta, r);

ta = (0:0.01:2) * 2 * pi;
r = sin(2. * ta) .* cos(ta);
polar(ta, r);

title('Practice_Polar_Graph');

%3.6

x = linspace(-6, 6, 100);

f = x.^4 - 3*x. ^ 3 + 10*x.^2 - x - 2;

plot (x, f, 'k-', 'LineWidth', 2);

hold on;

title('\bf The Plot of \itf(x) = x\rm\bf^{4} - 
3\itx\rm\bf^3{3} + 10\itx\rm\bf^{2} - \itx\rm\bf - 2');

xlabel('\bf\ itx');
ylabel('\bf\itf(x)');

grid on;

